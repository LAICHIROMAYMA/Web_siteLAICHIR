@model IEnumerable<Book_web.Models.Book>
@{
    ViewData["Title"] = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container" style="margin-left:450px;width:1200px;margin-top:-1200px;">
    
    <div class="gallery_gds">
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-6 thumbnail team-w3agile">
                <img src="~/img/@Html.DisplayFor(modelItem => item.image)" class="img-responsive" alt="" />
                <table class="table">

                    <tr>


                        <td>
                            @Html.DisplayFor(modelItem => item.Titre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>

                        <td>@Html.DisplayFor(modelItem => item.avail)</td>
                    </tr>

                </table>
                <div class="w3ls-social-icons">
                    <a class="facebook" asp-action="Booksdetails" asp-route-id="@item.id"> view <span class="fa fa-eye"></span></a>
                </div>

            </div>
        }
    </div>
   
    <br /><br /><br />
    
</div>


