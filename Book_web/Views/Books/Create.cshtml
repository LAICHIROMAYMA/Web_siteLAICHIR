@model Book_web.Models.Book

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Book</h4>
<hr />
<div class="row" style="background-color:orange;border-style:dotted;box-shadow: -1px 1px 3px 1px orange ;height: 650px;width: 552px;margin-left: 310px;margin-top: -1220px;padding-top:0px;padding-left: 10px;padding-right: 10px;padding-bottom: 0px;">
    <div class="col-md-4" style=" border-radius: 20px/10px; box-shadow: 2px 1px 0px ;margin-top:-30px;height:800px; ">
        <form asp-action="Create" style="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titre" class="control-label"></label>
                <input asp-for="Titre" class="form-control" style="width: 320px;"/>
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Auteur" class="control-label"></label>
                <input asp-for="Auteur" class="form-control" style="width: 320px;" />
                <span asp-validation-for="Auteur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control" style="width: 320px;">
                      <option value="All" name="All">All</option>
                      <option value="Art" name="Art">Art</option>
                      <option value="Philosophy" name="Philosophy">Philosophy</option>
                      <option value="Romance" name="Romance">Romance</option>
                      <option value="Action" name="Action">Action</option>
                
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" style="width: 320px;" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" style="width:320px;" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="image" class="control-label"></label>
                <input asp-for="image" class="form-control" type="file" style="width: 350px;" />
                <span asp-validation-for="image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" style="width: 320px;" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="avail" class="control-label"></label>
                <select asp-for="avail" class="form-control" style="width: 320px;">
                    <option value="In Stock" name="avail">In Stock</option>
                    <option value="Out Stock" name="avail">Out Stock</option>
                 </select>
                <span asp-validation-for="avail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top:-620px; margin-left:30px;">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
